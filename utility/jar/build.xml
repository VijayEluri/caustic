<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project MicroScraper Utility">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="../jar/microcraper.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="net.microscraper.client.utility.MicroScraperConsole"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="../bin"/>
            <fileset dir="../../base/build/classes"/>
            <fileset dir="../../implementation/json/bin"/>
            <zipfileset excludes="META-INF/*.SF" src="../../implementation/sqlite/lib/sqlitejdbc-v056/sqlitejdbc-v056.jar"/>
            <fileset dir="../../implementation/sqlite/bin"/>
            <fileset dir="../../implementation/regexp/bin"/>
        </jar>
    </target>
</project>
